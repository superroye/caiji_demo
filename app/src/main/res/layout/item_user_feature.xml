<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:divider="@drawable/user_feature_divider_space"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:showDividers="middle">

    <ImageView
        android:id="@+id/iv_family_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:src="@drawable/family_icon_leader"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_nameplate"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:visibility="gone"
        android:src="@drawable/user_feature_hall_manager_icon"
        tools:visibility="visible" />

    <com.supylc.bimo.ui.BadgeView
        android:id="@id/feature_badge_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_wealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="10.5dp"
        android:visibility="gone"
        android:maxLines="1"
        android:background="@drawable/user_feature_wealth_0x"
        tools:text="2"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_charm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="10.5dp"
        android:visibility="gone"
        android:maxLines="1"
        android:background="@drawable/user_feature_charm_0x"
        tools:text="2"
        tools:visibility="visible" />
</LinearLayout>